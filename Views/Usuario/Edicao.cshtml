@model Usuario
@{
    ViewData["Title"] = "Edição de Usuários";
}
<h1 class="row justify-content-md-center">Edição de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="Edicao" method="post" class="col-md-4">
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" value="@Model.Nome" required/>
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" value="@Model.Login" required/>
        </div>
        <div>
            <label asp-for="Senha">Senha</label>
            <br>
            <input asp-for="Senha" class="form-control" type="password" required/>
        </div>
        <div class="form-group">
            <label asp-for="Tipo">Tipo Usuário</label>
            <select name="Tipo" class="form-control" required>
            <option value="0">Administrador</option>
            <option value="1">Padrão</option>
            </select>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>