@model Usuario

<h1 class="text-danger">ALERTA!!</h1>
<h3>Tem certeza que deseja excluir o usuário @Model.Nome (Login: @Model.Login)?</h3>
<p>A exclusão é irreverssível.</p>

<form action="Excluir" method="post">
    <input type="hidden" name="id" value="@Model.Id">
    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form>