@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuários";
}

<h1 class="row justify-content-md-center">Cadastro de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" required/>
        </div>
        <div>
            <label asp-for="Senha">Senha</label>
            <br>
            <input asp-for="Senha" class="form-control" type="password" required/>
        </div>
        <div class="form-group">
            <label asp-for="Tipo">Tipo Usuário</label>
            <select name="Tipo" class="form-control" required>
            <option value="0">Administrador</option>
            <option value="1">Padrão</option>
            </select>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>